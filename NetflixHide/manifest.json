{
  "manifest_version": 2,

  "name": "Netflix Hide",
  "description": "Allows you to hide or tint unwanted shows from the Netflix page. Please refresh the page after installing the extension.",
  "version": "1.0",

  "browser_action": {
    "default_icon": {
		"16": "images/icon16.png",          
        "48": "images/icon48.png",          
        "128": "images/icon128.png"
	},
    "default_popup": "popup.html"
  },
  
   "content_scripts": [
        {
          "matches": ["*://*.netflix.com/*"],
		  "css":["dropdown.css"],
          "js": ["Remove.js"]	  
        }
    ],
	"background": {
        "persistent": true,
        "scripts": ["popup.js"]
    },
  "permissions": [
    "activeTab",
    "storage",
	"unlimitedStorage",
	"contextMenus"
  ]
}
